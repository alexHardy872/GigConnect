@model GigConnect.Models.ViewModels.GigInfoViewModel

@{
    ViewBag.Title = "RemoveBandsFromLineUp";
}



<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <div class="contentCol">
            <h6>RemoveBandsFromLineUp</h6>
            <table class="table">
                <tr>
                    <th>
                        Band
                    </th>
                    <th>
                        Action
                    </th>
                </tr>

                @foreach (var band in Model.bands)
                {
                    <tr>
                        <td>
                            @band.bandName;
                        </td>
                        <td style="width: 20%;">

                            <button class="btn-default" style="background-color: red;">@Html.ActionLink("Remove", "RemoveBandFromGig", new { bandId = band.BandId, gigId = Model.gig.GigId })</button>
                        </td>
                    </tr>
                }

            </table>


        </div>
        <button class="btn-default" >@Html.ActionLink("Back To Edit", "Edit", "Gig", new {gigId = Model.gig.GigId }, null)</button>

    </div>
    <div class="col-md-4">

    </div>
</div>
