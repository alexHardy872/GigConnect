

@model GigConnect.Models.ViewModels.VenueIndexViewModel

<h2>@Model.venue.venueName</h2>


<div class="container">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>




